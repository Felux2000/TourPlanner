<Application x:Class="TourPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TourPlanner" 
             xmlns:Views="clr-namespace:TourPlanner.UserControls"
             xmlns:ViewModels="clr-namespace:TourPlanner.ViewModels"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModels:MainViewModel}">
            <Views:MainViewControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:AddTourViewModel}">
            <Views:AddTourControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:AddTourLogViewModel}">
            <Views:AddTourLogControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:EditTourViewModel}">
            <Views:EditTourControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:EditTourLogViewModel}">
            <Views:EditTourLogControl />
        </DataTemplate>
    </Application.Resources>
</Application>
 