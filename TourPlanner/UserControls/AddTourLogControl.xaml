<UserControl x:Class="TourPlanner.UserControls.AddTourLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="2,2,2,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontSize="18" HorizontalContentAlignment="Center">Add a new TourLog!</Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Date:</Label>
                <DatePicker Grid.Row="1" IsTodayHighlighted="True" FirstDayOfWeek="Monday" HorizontalAlignment="Center"/>
                <Label Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Time:</Label>
                <TextBox Grid.Row="3"/>
                <Label Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Comment:</Label>
                <TextBox Grid.Row="5"/>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Difficulty:</Label>
                <TextBox Grid.Row="1"/>
                <Label Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Total Distance:</Label>
                <TextBox Grid.Row="3"/>
                <Label Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Total Time::</Label>
                <TextBox Grid.Row="5"/>
                <Label Grid.Row="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Rating:</Label>
                <TextBox Grid.Row="7"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            
        </Grid>
    </Grid>
</UserControl>
